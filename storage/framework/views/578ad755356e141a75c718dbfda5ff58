<?php $__env->startSection('con'); ?>
<section id="content">

	<div class="content-wrap">

		<div class="container clearfix">

			<!-- Post Content
			============================================= -->
			<div class="postcontent nobottommargin clearfix">

				<!-- Posts
				============================================= -->
				<?php foreach($posts as $k=>$v): ?>
				<div id="posts">

					<div class="entry clearfix">
						<div class="entry-image">
							<a href="<?php echo e(url('/post',['id'=>$v->id])); ?>"><img class="image_fade" src="<?php echo e($v->pic); ?>" alt="<?php echo e($v->title); ?>"></a>
						</div>
						<div class="entry-title">
							<h2><a href="<?php echo e(url('/post',['id'=>$v->id])); ?>"><?php echo e($v->title); ?></a></h2>
						</div>

					</div>

				</div><!-- #posts end -->
				<?php endforeach; ?>
				<!-- Pagination
				============================================= -->
				<?php if($posts->lastPage() > 1): ?>
					<ul class="pager">
					    <li class="<?php echo e(($posts->currentPage() == 1) ? ' disabled' : ''); ?>">
					        <a href="<?php echo e($posts->url(1)); ?>">上一页</a>
					    </li>
					    
					    <li class="<?php echo e(($posts->currentPage() == $posts->lastPage()) ? ' disabled' : ''); ?>">
					        <a href="<?php echo e($posts->url($posts->currentPage()+1)); ?>" >下一页</a>
					    </li>
					</ul>
				<?php endif; ?>
				<!-- .pager end -->

			</div><!-- .postcontent end -->

			<!-- Sidebar
			============================================= -->
			<?php echo slider(); ?>

			<!-- .sidebar end -->
				
		</div>

	</div>

</section>	
<?php $__env->stopSection(); ?>
